@{
	ViewData["Title"] = "Registration";
	Layout = "~/Views/Shared/_Authentication.cshtml";
}
<section class="ftco-section">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-12 col-lg-10">
				<div class="wrap d-md-flex">
					<div class="img">
						<img class="img-fluid" src="~/image/registration.jpg" style="height:100%;" />
					</div>
					<div class="login-wrap p-4 p-md-5">
						<div class="d-flex">
							<div class="w-100">
								<h3 class="mb-4">Sign Up</h3>
							</div>
							<div class="w-100">
								<p class="social-media d-flex justify-content-end">
									<a class="social-icon d-flex align-items-center justify-content-center">
										<span class="fa fa-facebook"></span>
									</a>
									<a class="social-icon d-flex align-items-center justify-content-center">
										<span class="fa fa-twitter"></span>
									</a>
								</p>
							</div>
						</div>
						<div class="signin-form" id="RegistrationForm">
							<div class="form-group mb-3">
								<label class="label" for="name">Username</label>
								<input type="text"
									   class="form-control"
									   placeholder="Username"
									   name="Username"
									   id="Username" />
							</div>
							<div class="form-group mb-3">
								<label class="label" for="password">Password</label>
								<input type="password"
									   class="form-control"
									   placeholder="Password"
									   name="Password"
									   id="Password" />
							</div>
							<div class="form-group mb-3">
								<label class="label" for="email">Email</label>
								<input type="Email"
									   class="form-control"
									   placeholder="Email"
									   name="Email"
									   id="Email" />
							</div>
							<div class="form-group">
								<button type="submit" id="BtnSignUp"
										class="form-control btn btn-primary rounded submit px-3">
									Sign Up
								</button>
							</div>
						</div>
						<p class="text-center">
							Already a member? <a asp-controller="Authentication" asp-action="Index">Sign In</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

